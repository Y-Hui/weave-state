{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/temp-types",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "weave-state": ["./src/index.ts"],
      "weave-state/extend": ["./src/extend/index.ts"],
      "weave-state/react-extend": ["./src/react-extend/index.ts"],
      "weave-state/utils": ["./src/utils/index.ts"],
      "weave-state/utils/*": ["./src/utils/*.ts"],
      "weave-state/types": ["./src/types"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}

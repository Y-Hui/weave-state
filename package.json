{
  "name": "weave-state",
  "version": "0.3.0",
  "private": false,
  "author": "Y-Hui",
  "scripts": {
    "build": "rollup -c && pnpm build:dts && pnpm copy:base",
    "build:dts": "node ./scripts/type-declaration.js",
    "copy:base": "node ./scripts/package.js"
  },
  "license": "MIT",
  "sideEffects": false,
  "types": "./types/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./types/index.d.ts",
      "module": "./index.esm.js",
      "default": "./index.js"
    },
    "./extend": {
      "types": "./types/extend/index.d.ts",
      "module": "./extend/index.esm.js",
      "default": "./extend/index.js"
    },
    "./react-extend": {
      "types": "./types/react-extend/index.d.ts",
      "module": "./react-extend/index.esm.js",
      "default": "./react-extend/index.js"
    },
    "./utils": {
      "types": "./types/utils/index.d.ts",
      "module": "./utils/index.esm.js",
      "default": "./utils/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Y-Hui/weave-state"
  },
  "keywords": [
    "react",
    "state",
    "manager",
    "management",
    "store"
  ],
  "devDependencies": {
    "@babel/core": "~7.19.0",
    "@babel/plugin-transform-runtime": "~7.18.10",
    "@babel/preset-env": "~7.19.0",
    "@rollup/plugin-alias": "~3.1.9",
    "@rollup/plugin-babel": "~5.3.1",
    "@rollup/plugin-json": "~4.1.0",
    "@rollup/plugin-node-resolve": "~14.0.1",
    "@rollup/plugin-replace": "~4.0.0",
    "@types/react": "^18.0.14",
    "@types/use-sync-external-store": "~0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "7.21.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "json": "~11.0.0",
    "rollup": "~2.79.0",
    "rollup-plugin-dts": "~4.2.2",
    "rollup-plugin-terser": "~7.0.2",
    "rollup-plugin-typescript2": "~0.33.0",
    "shelljs": "~0.8.5",
    "typescript": "^4.5.4",
    "use-sync-external-store": "~1.2.0"
  },
  "peerDependencies": {
    "use-sync-external-store": ">=1.2.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
